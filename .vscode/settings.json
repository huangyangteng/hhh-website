{
    "eslint.autoFixOnSave": true,
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescriptreact",
        "html",
        {
            "language": "vue",
            "autoFix": true
        },
        {
            "language": "typescript",
            "autoFix": true
        },
        {
            "language": "typescriptreact",
            "autoFix": true
        }
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "editor.formatOnSave": true,
    "cSpell.words": [
        "vant",
        "antd",
        "Sider"
    ],
    "editor.detectIndentation": false,
    "prettier.semi": false,
    "files.associations": {
        "*.css": "tailwindcss"
    }
}