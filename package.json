    "@tanstack/react-query": "^5.38.0",
    "@types/node": "20.2.5",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.4",
    "@types/sortablejs": "^1.15.8",
    "antd": "^5.21.4",
    "autoprefixer": "^10.4.14",
    "axios": "^1.7.2",
    "boring-avatars": "^1.11.2",
    "chinese-lunar": "^0.1.4",
    "commitizen": "^4.3.0",
    "cookies-next": "^4.2.1",
    "date-holidays": "^3.23.3",
    "dayjs": "^1.11.9",
    "env-cmd": "^10.1.0",
    "jotai": "^2.6.3",
    "next": "14.2.15",
    "next-themes": "^0.3.0",
    "postcss": "^8.4.25",
    "react": "18.3.1",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "18.2.0",
    "react-hotkeys-hook": "^4.4.1",
    "react-pdf": "^8.0.2",
    "react-rnd": "^10.4.1",
    "react-sortablejs": "^6.1.4",
    "react-virtuoso": "^4.7.11",
    "recoil": "^0.7.7",
