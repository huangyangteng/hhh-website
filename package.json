    "@testing-library/dom": "^10.1.0",
    "@testing-library/react": "^16.0.0",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "cross-env": "^7.0.3",
    "husky": "^9.1.1",
    "jsdom": "^24.1.0",
    "prettier": "^3.2.5",
    "shelljs": "^0.8.5",
    "ssh2": "^1.14.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.0",
    "vitest": "^1.6.0"
  }
