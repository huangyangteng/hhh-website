{
  "name": "hhh-website",
  "version": "0.1.0",
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 80",
    "dev:dev": "env-cmd -f .env.development pnpm dev",
    "dev:prod": "env-cmd -f .env.production pnpm dev",
    "build:dev": "env-cmd -f .env.development pnpm build",
    "build:prod": "env-cmd -f .env.production pnpm build",
    "start:dev": "env-cmd -f .env.development pnpm start",
    "start:prod": "env-cmd -f .env.production pnpm start",
    "lint": "next lint",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build:docker": "sh ./docker-build-local.sh",
    "deploy": "node deploy",
    "release": "sh ./docker-build-local.sh && node deploy",
    "prepare": "husky"
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.7",
    "@ant-design/nextjs-registry": "^1.0.1",
    "@ant-design/static-style-extract": "^1.0.3",
